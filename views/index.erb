<a href="/new">New Document</a>

<ul class="documents">
  <% documents.each do |doc| %>
  <li>
    <a href="/<%= doc %>"><%= doc %></a>
    <a href="/<%= doc %>/edit">Edit</a>
    <form action="/<%= doc %>" method="post">
      <input type="hidden" name="_method" value="DELETE"/>
      <button type="submit">Delete</button>
    </form>
  </li>
  <% end %>
</ul>